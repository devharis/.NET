@{var CurrentUser = Session["CurrentUser"] as Easyfy.CHS.Model.Athlete.Athlete; }
<!DOCTYPE html>
<meta charset="UTF-8">
<html>
	<head>
		<title>Easyfy prototyp startpage</title>
        <link rel='stylesheet' type='text/css' href='~/Content/style.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/Haris.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/sofia.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/bootstrap/css/bootstrap.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/bootstrap/css/bootstrap-responsive.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/bootstrap/css/datepicker.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/jquery-ui/css/smoothness/jquery-ui-1.10.1.custom.css'>
        <link rel='stylesheet' type='text/css' href='~/Content/fonts/FortAwesome-Font-Awesome-13d5dd3/css/font-awesome.min.css'>
	</head>
	<body>
	    <div id="Wrap">
			<header>
				<div id="HeaderContent" class="container">
					<div id="Logo">
						<h2> Crossfit </h2>
						<span> Highscore </span>
					</div>
					<div id="SocialLogin">
						@*<span id="LoginButton">@Html.ActionLink("Log in", "Login", new { controller = "Account" })</span>*@
                        @Html.Partial("_LoginPartial")
					</div>
					<nav>
                        <ul class='unstyled'>
							<li>
                                <a href="@Url.Action("Index", "Home")" class="startpageMenuLink">Startpage</a>
                            </li>
                            <li>
                                @Html.ActionLink("Affiliate", "Index", "Affiliate", new { id = string.Empty }, new { @class = "affiliateMenuLink" })
                            </li>
                            <li>
                                @if (CurrentUser != null) {
						            @Html.ActionLink("My profile", "Details", "Athlete", new { id = CurrentUser.Username }, new { @class = "myProfileMenuLink" })
                                }
                            </li>
@*                            <li>
						        @Html.ActionLink("Settings", "Index", "Home", new { @class = "settingsMenuLink" })
                            </li>
                            <li>
						        @Html.ActionLink("Explore", "Index", "Home", new { @class = "exploreMenuLink" })
                            </li>*@
                            <li>
                                @if (CurrentUser != null && CurrentUser.Admin) {
                                    @Html.ActionLink("Admin", "Index", "Admin", new { id = string.Empty }, new { @class= "adminMenuLink" })

                                    
                                }
                            </li>
                        </ul>
					</nav>
				</div>
			</header>
			<div class="container">
                @RenderBody()
            </div>
            <div id="Push"></div>
		</div>
		<footer class="footer">
			<section class="container">
            @RenderSection("featured", required: false)
				<div class='row-fluid'>
					<div class='span4' id='FooterLeft'>
						<h4 id='FooterNavigation'>navigation</h4>
						<ul class='unstyled'>
							<li>
                                @if (CurrentUser != null) {
								<i class="icon-user"></i>
								    @Html.ActionLink("My profile", "Details", new { Controller = "Athlete", id = CurrentUser.Username })
                                }
							</li>
							<li>
								<i class="icon-wrench"></i>
								<a href='#'>Settings</a>
							</li>
							<li>
								<i class="icon-tasks"></i>
								<a href='#'>Explore</a>
							</li>
						</ul>
					</div>
					<div class='span4' id="FooterMiddle">
						© Copyright 2013
						<br />
						<span> Lorem ipsum, croffit, ipsum lorem. Lorem ipsum, croffit, ipsum lorem.
							Lorem ipsum, croffit, ipsum lorem. Lorem ipsum, croffit, ipsum lorem. </span>
					</div>
					<div class='span4' id='FooterRight'>
						<h4 id='FooterAddress'>contact</h4>
						<address>
							<strong>Crossfit Highscore</strong>
							<br>
							Minkvägen 5, 39350 Kalmar
							<br>
							Sweden
							<br>
							<abbr title="Phone">P:</abbr> +4670-879 70 70
						</address>
					</div>
			    </div>
			</section>
		</footer>

        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")

    <script src="@Url.Content("~/Scripts/script.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/forms.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/exercise.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/affiliate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/wod.js")" type="text/javascript"></script>
	  <script src="@Url.Content("~/Scripts/schedule.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/athlete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-1.0.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/activity.js")" type="text/javascript"></script>


	</body>
</html>
