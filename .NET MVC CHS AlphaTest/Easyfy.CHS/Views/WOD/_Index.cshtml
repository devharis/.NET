@using Easyfy.CHS.Model.Wod
@model List<Easyfy.CHS.Model.Wod.WodBase>

<div class="span12" id="Content">
    <h4>Wods</h4>
    <i class="icon-remove-circle" id="ClosePageArrow"><span id="ClosePageText">Close</span></i>

    <h3>Girls</h3>

    <table class="table table-striped table-bordered">
        <tr>
            <th>Wodtype</th>
            <th>Name</th>
            <th>Description</th>
            <th>Time</th> 
            <th>DefaultResultAggregation</th>
            <th>DefaultResultType</th>
            <th>LowerIsBetter</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Where(x => x.BenchmarkType == BenchmarkType.Girls).OrderBy(x => x.WodType))
        {
            <tr>
                <td>@Html.DisplayFor(m => item.WodType)</td>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Description)</td>
                <td>@Html.DisplayFor(m => item.Time)</td>
                <td>@Html.DisplayFor(m => item.DefaultResultAggregation)</td>
                <td>@Html.DisplayFor(m => item.DefaultResultType)</td>
                <td>@Html.DisplayFor(m => item.LowerIsBetter)</td>
                <td>@Html.ActionLink("Schedule Wod", "ScheduleWod", new { controller = "Affiliate", id = ViewBag.AffiliateFriendlyUrl, wodId = item.Id })</td>
            </tr>
        }
    </table>

