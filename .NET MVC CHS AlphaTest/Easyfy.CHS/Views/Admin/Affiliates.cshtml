@model IEnumerable<Easyfy.CHS.Model.Affiliate.Affiliate>

<h3>Affiliates:</h3>

<table class="table">

    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>@Html.DisplayNameFor(model => model.City)</th>
        <th>@Html.DisplayNameFor(model => model.Country)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.Address)</td>
            <td>@Html.DisplayFor(m => item.City)</td>
            <td>@Html.DisplayFor(m => item.Country)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { controller = "Affiliate", id = item.FriendlyUrl }) |
                @Html.ActionLink("Delete", "Delete", new { controller = "Affiliate", id = item.FriendlyUrl },
                    new { onclick = "return confirm('Are you sure?');" })
            </td>
        </tr>
    }

</table>